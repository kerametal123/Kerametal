<Window x:Class="OdabirPostojeceOpcije"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP_Kerametal"
        mc:Ignorable="d"
        Title="Odabir opcija" Height="107" Width="409">
    <Grid>
        <ComboBox x:Name="opcije" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="button" Content="Potvrdi" HorizontalAlignment="Left" Margin="190,43,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_Copy" Content="Odustani" HorizontalAlignment="Left" Margin="315,43,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="label" Content="Izaberite neku od postojećih opcija" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
